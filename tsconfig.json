{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
         "@types/*": ["./node_modules/@types/*", "./src/types/*"],
         "@/*": ["./src/*"],
         "@utils/*": ["./src/utils/*"],
         "@middlewares/*": ["./src/middlewares/*"],
         "@routes/*": ["./src/routes/*"],
         "@controllers/*": ["./src/controllers/*"],
         "@models/*": ["./src/models/*"],
      },
      "typeRoots": [
         "./node_modules/@types",
         "./src/types"
      ]
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "**/*.test.ts"]
}